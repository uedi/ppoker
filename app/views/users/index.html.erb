<h1>Users</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>name</th>
      <th>email</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |u| %>
      <tr>
        <td><%= u.id %></td>
        <td><%= u.firstname %> <%= u.lastname %></td>
        <td><%= u.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>
